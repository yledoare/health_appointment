<odoo>
  <data>
    <record id="view_health_appointment_form" model="ir.ui.view">
      <field name="name">health.appointment.form</field>
      <field name="model">health.appointment</field>
      <field name="arch" type="xml">
        <form string="Health Appointment">
            <header>
              <button name="action_send_email" string="Send email" type="object"></button>
            </header>
          <sheet>
            <group>
              <field name="name"/>
              <field name="description"/>
              <field name="contact_id"
                options="{'no_open': True, 'no_create': True}"
              />
              <field name="period"/>
              <field name="last_date"/>
              <field name="next_appointment"/>
              <field name="next_date"/>
              <field name="email"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>
    <record id="view_health_appointment_list" model="ir.ui.view">
      <field name="name">health.appointment.list</field>
      <field name="model">health.appointment</field>
      <field name="arch" type="xml">
        <list string="Health Appointment List">
          <field name="name"/>
          <field name="description"/>
          <field name="contact_id"/>
          <field name="period"/>
          <field name="last_date"/>
          <field name="next_appointment"/>
          <field name="next_date"/>
          <field name="email"/>
        </list>
      </field>
    </record>
    <record id="action_health_appointment" model="ir.actions.act_window">
      <field name="name">Health Appointment</field>
      <field name="res_model">health.appointment</field>
      <field name="view_mode">list,kanban,form</field>
    </record>
  </data>
</odoo>
